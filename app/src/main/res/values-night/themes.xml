<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TicTacToe" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/green_a400</item>
        <item name="buttonTint">@color/black</item>
        <item name="colorPrimaryVariant">@color/green_a700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:elevation">0dp</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/alef</item>
        <item name="android:colorBackground">@color/gray_50</item>
        <!--        <item name="android:animateLayoutChanges">true</item>-->
        <item name="android:windowContentTransitions">true</item>
    </style>
</resources>