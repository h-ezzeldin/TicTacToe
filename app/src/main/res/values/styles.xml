<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button" parent="Widget.AppCompat.Button" >
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="layout_constraintWidth_max">256dp</item>
        <item name="layout_constraintWidth_percent">0.7</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>

    </style>
    <style name="letter" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">8dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>

    </style>

    <style name="letterContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:background">@drawable/button_gray</item>
    </style>
</resources>